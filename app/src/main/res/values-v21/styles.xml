<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">

        <!-- colorPrimary applied to action bar -->
        <item name="android:colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark applied to status bar -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent applied to UI widgets like text field and check boxes -->
        <item name="android:colorAccent">@color/accent</item>

        <!-- navbar (on the very bottom) will be same color as status bar -->
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <item name="android:displayOptions">disableHome</item>
    </style>
</resources>
